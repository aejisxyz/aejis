# ========================================
# AEJIS CONFIGURATION
# ========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to Git (already in .gitignore)

# ========================================
# TELEGRAM BOT CONFIGURATION
# ========================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ========================================
# FIREBASE CONFIGURATION (Frontend)
# ========================================
# Get these from Firebase Console > Project Settings
# Prefix with REACT_APP_ for Create React App
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id

# ========================================
# API URLS
# ========================================
# Development
WEBSITE_URL=http://localhost:5000
REACT_APP_API_URL=http://localhost:5000

# Production (uncomment and update for deployment)
# WEBSITE_URL=https://www.aejis.xyz
# REACT_APP_API_URL=https://api.aejis.xyz

# ========================================
# OPTIONAL CONFIGURATION
# ========================================
# Google Gemini AI (for advanced analysis)
GEMINI_API_KEY=your_gemini_api_key_here

# Logging
LOG_LEVEL=INFO

# Flask
FLASK_ENV=production
DEBUG=False

# File limits
MAX_FILE_SIZE=52428800

